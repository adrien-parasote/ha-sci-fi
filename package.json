{
  "version": "1.3.1",
  "description": "Sci-fi cards for HA dashboard",
  "main": "src/sci-fi.js",
  "type": "module",
  "scripts": {
    "format": "prettier tests/*.html tests/**/*.js src/*.js src/**/*.js src/**/**/*.js --write",
    "serve": "es-dev-server --app-index index.html --node-resolve --watch",
    "copy": "mkdir temp && cp -r ./src/* ./temp",
    "prepare-prod": "npm run copy && rm ./temp/build/const.js && mv ./temp/build/const.js.PROD ./temp/build/const.js",
    "clean-up": "rm -rf temp && mv sci-fi.min.js dist",
    "build": "npm run format && npm run prepare-prod && rollup -c && npm run clean-up"
  },
  "keywords": [],
  "devDependencies": {
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@rollup/plugin-replace": "6.0.1",
    "@rollup/plugin-terser": "0.4.4",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "es-dev-server": "1.55.1",
    "prettier": "3.4.1",
    "rollup": "2.79.2",
    "rollup-plugin-minify-html-literals": "1.2.6"
  },
  "dependencies": {
    "@mdi/js": "7.4.47",
    "chart.js": "4.4.7",
    "home-assistant-js-websocket": "9.4.0",
    "lit": "3.2.1",
    "lodash-es": "4.17.21"
  }
}
