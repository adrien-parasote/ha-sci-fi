{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": [
    "fr"
  ],
  "inputFiles": [
    "src/*.js",
    "src/**/*.js",
    "src/**/**/*.js",
    "src/**/**/**/*.js",
    "src/**/**/**/**/*.js"
  ],
  "output": {
    "mode": "runtime",
    "outputDir": "./src/locales/locales",
    "localeCodesModule": "./src/locales/locale-codes.js"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff/"
  }
}
